<h2 class="text-2xl font-semiboldmb-6 text-center">Sign up</h2>

<%= form_for(resource,
             as: resource_name,
             url: registration_path(resource_name),
             html: { class: "max-w-sm md:max-w-md p-10 space-y-6" }) do |f| %>

  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="space-y-2">
    <%= f.label :email, class: "block text-sm font-medium text-slate-700" %>
    <%= f.email_field :email,
          autofocus: true, autocomplete: "email",
          class: "block w-full h-11 rounded-md border border-slate-300 px-3 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
  </div>

  <div class="space-y-2">
    <div class="flex items-baseline justify-between">
      <%= f.label :password, class: "block text-sm font-medium text-slate-700" %>
      <% if @minimum_password_length %>
        <em class="text-xs text-slate-500">(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
    </div>
    <%= f.password_field :password, autocomplete: "new-password",
          class: "block w-full h-11 rounded-md border border-slate-300 px-3 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
  </div>

  <div class="space-y-2">
    <%= f.label :password_confirmation, class: "block text-sm font-medium text-slate-700" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password",
          class: "block w-full h-11 rounded-md border border-slate-300 px-3 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
  </div>

  <div class="space-y-2">
    <%= f.label :first_name, class: "block text-sm font-medium text-slate-700" %>
    <%= f.text_field :first_name,
          class: "block w-full h-11 rounded-md border border-slate-300 px-3 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
  </div>

  <div class="space-y-2">
    <%= f.label :last_name, class: "block text-sm font-medium text-slate-700" %>
    <%= f.text_field :last_name,
          class: "block w-full h-11 rounded-md border border-slate-300 px-3 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
  </div>

  <div class="space-y-2">
    <%= f.label :role, class: "block text-sm font-medium text-slate-700" %>
    <%= f.select :role, User::ROLES.reject { |r| r == "admin" },
          { prompt: "Select a role" },
          class: "block w-full h-11 rounded-md border border-slate-300 px-3 shadow-sm bg-white focus:border-blue-500 focus:ring-blue-500" %>
  </div>

  <div>
    <%= f.submit "Sign up",
          class: "inline-flex items-center rounded-md bg-blue-600 px-4 py-2 text-white font-semibold hover:bg-blue-700" %>
  </div>
<% end %>

<div class="mt-4">
  <%= render "devise/shared/links" %>
</div>
