<h2 class="text-2xl font-semibold mb-6 text-center">Forgot your password?</h2>

<div class="mx-auto w-full max-w-md">
  <%= form_for(resource,
               as: resource_name,
               url: password_path(resource_name),
               html: { method: :post, class: "space-y-6" }) do |f| %>

    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="space-y-2">
      <%= f.label :email, class: "block text-sm font-medium text-slate-700" %>
      <%= f.email_field :email,
            autofocus: true,
            autocomplete: "email",
            class: "block w-full rounded-md border border-slate-300 h-11 px-3 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
    </div>

    <div>
      <%= f.submit "Send reset password instructions",
            class: "inline-flex items-center rounded-md bg-blue-600 px-4 py-2 text-white font-semibold hover:bg-blue-700" %>
    </div>
  <% end %>

  <div class="mt-4 text-center text-sm">
    <%= render "devise/shared/links" %>
  </div>
</div>
