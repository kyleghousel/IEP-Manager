<%= form_with model: @accommodation, data: { turbo: false }, class: "space-y-4 max-w-lg" do |f| %>
  <%= render "shared/errors", resource: @accommodation %>

  <div>
    <%= f.label :name, class: "block text-sm font-medium text-slate-700" %>
    <%= f.text_field :name, required: true, autofocus: true,
          class: "mt-1 block w-full rounded-md border-slate-300 shadow-sm focus:border-slate-500 focus:ring-slate-500" %>
  </div>

  <div>
    <%= f.label :details, class: "block text-sm font-medium text-slate-700" %>
    <%= f.text_area :details, rows: 4, minlength: 20,
          class: "mt-1 block w-full rounded-md border-slate-300 shadow-sm focus:border-slate-500 focus:ring-slate-500" %>
    <p class="mt-1 text-xs text-slate-500">At least 20 characters.</p>
  </div>

  <div>
    <%= f.label :accommodation_type, "Type", class: "block text-sm font-medium text-slate-700" %>
    <%= f.select :accommodation_type,
          options_for_select(Accommodation.accommodation_types.keys.map { |k| [k.humanize, k] }, @accommodation.accommodation_type),
          { prompt: "Select a type" },
          class: "mt-1 block w-full rounded-md border-slate-300 shadow-sm focus:border-slate-500 focus:ring-slate-500" %>
  </div>

  <%= f.submit (@accommodation.persisted? ? "Update Accommodation" : "Create Accommodation"),
        class: "inline-flex items-center rounded-md bg-blue-600 px-4 py-2 text-white text-sm font-semibold hover:bg-blue-700" %>
<% end %>

<div class="mt-6">
  <%= link_to "Back", students_path, class: "text-sm text-slate-600 hover:text-slate-800" %>
</div>
