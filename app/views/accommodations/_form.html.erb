<%= form_with model: @accommodation, data: { turbo: false } do |f| %>
  <%= render "shared/errors", resource: @accommodation %>

  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.label :details %>
    <%= f.text_area :details, rows: 3 %>
  </div>

  <div>
    <%= f.label :accommodation_type %>
    <%= f.select :accommodation_type,
        options_for_select(
          Accommodation.accommodation_types.keys.map { |k| [k.humanize, k] },
          @accommodation.accommodation_type
        ) %>
  </div>

  <%= f.submit %>
<% end %>
<br>
<br>

<%= link_to "Back", @accommodation%>
