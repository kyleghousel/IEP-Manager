<h1 class="text-2xl font-semibold mb-6">Students</h1>

<div class="grid gap-4">
  <% @students.each do |student| %>
    <div class="rounded-md border border-slate-200 bg-white p-4 shadow-sm hover:shadow-md transition">
      <%= link_to "#{student.first_name} #{student.last_name}",
                  student,
                  class: "text-lg font-medium text-slate-800 hover:text-blue-600" %>
    </div>
  <% end %>
</div>

<% if policy(Student).new? %>
  <div class="mt-8">
    <%= link_to "Add Student",
                new_student_path,
                class: "inline-block rounded-md bg-blue-600 px-4 py-2 text-white text-sm font-semibold hover:bg-blue-700" %>
  </div>
<% end %>
