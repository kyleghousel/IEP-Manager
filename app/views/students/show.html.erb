<h1><%= "#{@student.first_name} #{@student.last_name} Info" %></h1>
<p>Date of Birth: <%= @student.dob.strftime("%m/%d/%Y") %></p>
<p>SPED Diagnosis: <%= @student.diagnosis %></p>
<p>Grade Level: <%= @student.grade_level %></p>
<ul>
  <h4><%= "#{@student.first_name}'s Goals" %></h4>
  <% @student.student_goals.each do |sg| %>
    <li>
      <%= link_to sg.goal.name, [@student, sg] %>
      <%= button_to "❌", student_student_goal_path(@student, sg), method: :delete, data: { confirm: "Are you sure?" }%>
    </li>
  <% end %>
</ul>
<ul>
  <h4><%= "#{@student.first_name}'s Accommodations" %></h4>
  <% @student.student_accommodations.each do |sa| %>
    <li>
      <%= link_to sa.accommodation.name, [@student, sa] %>
      <%= button_to "❌", student_student_accommodation_path(@student, sa), method: :delete, data: { confirm: "Are you sure?" }%>
    </li>
  <% end %>
</ul>
<% if policy(StudentGoal).new? %>
  <%= link_to "Add Goal", new_student_student_goal_path(@student) %>
<% end %>
<br>
<% if policy(StudentAccommodation).new? %>
  <%= link_to "Add Accommodation", new_student_student_accommodation_path(@student) %>
<% end %>
<br>
<% if policy(@students).index? %>
  <%= link_to "Edit #{@student.first_name}", edit_student_path(@student) %>
<% end %>
<br>
<% if policy(@student).destroy? %>
  <%= button_to "Delete #{@student.first_name}", student_path(@student), method: :delete, data: { confirm: "Are you sure?" } %>
<% end %>
<br>
<% if policy(@students).index? %>
  <%= link_to "All Students", students_path(@students) %>
<% end %>
