<!DOCTYPE html>
<html>
  <head>
    <title>IEP Manager</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "tailwind", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>
  <body class="min-h-screen bg-slate-50 text-slate-800">
    <header class="bg-white border-b">
      <nav class="mx-auto max-w-5xl px-4 py-3 flex items-center justify-between">
        <%= link_to "IEP Manager", root_path, class: "text-xl font-semibold tracking-tight" %>
        <div class="flex items-center gap-3">
          <% if user_signed_in? %>
            <span class="text-sm text-slate-600"><%= current_user.email %></span>
            <%= button_to "Sign out", destroy_user_session_path, method: :delete,
                  class: "inline-flex items-center rounded-md bg-slate-800 px-3 py-1.5 text-white text-sm hover:bg-slate-700" %>
          <% else %>
            <%= link_to "Sign in", new_user_session_path,
                  class: "inline-flex items-center rounded-md bg-slate-800 px-3 py-1.5 text-white text-sm hover:bg-slate-700" %>
          <% end %>
        </div>
      </nav>
    </header>

    <main class="mx-auto max-w-5xl px-4 py-6 space-y-6">
      <%= render "shared/flash" %>
      <%= yield %>
    </main>
  </body>
</html>
