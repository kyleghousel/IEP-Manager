<h1 class="mb-6 text-2xl font-semibold text-slate-800">
  Create New Goal For <%= @student.first_name %>
</h1>

<%= form_with model: [@student, @student_goal], local: true,
              class: "space-y-6 max-w-xl" do |f| %>

  <%= render "shared/errors", resource: @student_goal %>

  <div>
    <%= f.label :goal_id, "Select Goal Template",
          class: "block text-sm font-medium text-slate-700" %>
    <%= f.collection_select :goal_id, Goal.active_only, :id, :name,
          {}, class: "mt-1 block w-full rounded-md border-slate-300 shadow-sm focus:border-slate-500 focus:ring-slate-500" %>
  </div>

  <div>
    <%= f.label :start_on, class: "block text-sm font-medium text-slate-700" %>
    <%= f.date_field :start_on,
          class: "mt-1 block w-full rounded-md border-slate-300 shadow-sm focus:border-slate-500 focus:ring-slate-500" %>
  </div>

  <div>
    <%= f.label :target_date, class: "block text-sm font-medium text-slate-700" %>
    <%= f.date_field :target_date,
          class: "mt-1 block w-full rounded-md border-slate-300 shadow-sm focus:border-slate-500 focus:ring-slate-500" %>
  </div>

  <div>
    <%= f.label :baseline, class: "block text-sm font-medium text-slate-700" %>
    <%= f.text_field :baseline,
          class: "mt-1 block w-full rounded-md border-slate-300 shadow-sm focus:border-slate-500 focus:ring-slate-500" %>
  </div>

  <div>
    <%= f.label :target_value, class: "block text-sm font-medium text-slate-700" %>
    <%= f.text_field :target_value,
          class: "mt-1 block w-full rounded-md border-slate-300 shadow-sm focus:border-slate-500 focus:ring-slate-500" %>
  </div>

  <div>
    <%= f.label :status, class: "block text-sm font-medium text-slate-700" %>
    <%= f.select :status, ["planned", "in_progress", "mastered"],
          {}, class: "mt-1 block w-full rounded-md border-slate-300 shadow-sm focus:border-slate-500 focus:ring-slate-500" %>
  </div>

  <div>
    <%= f.label :mastery_percent, class: "block text-sm font-medium text-slate-700" %>
    <%= f.number_field :mastery_percent,
          class: "mt-1 block w-full rounded-md border-slate-300 shadow-sm focus:border-slate-500 focus:ring-slate-500" %>
  </div>

  <div>
    <%= f.submit "Assign Goal",
          class: "inline-flex items-center rounded-md bg-slate-800 px-4 py-2 text-white hover:bg-slate-700 focus:outline-none focus:ring-2 focus:ring-slate-500" %>
  </div>
<% end %>
<% if policy(@student).show? %>
  <%= link_to "Back to #{@student.first_name}",
          @student,
          class: "inline-flex items-center rounded-lg bg-slate-100 px-3 py-1.5 text-slate-800 text-sm hover:bg-slate-200" %>
<% end %>
