<div class="max-w-2xl mx-auto space-y-8">

  <header class="space-y-2 text-center">
    <h1 class="text-3xl font-semibold text-slate-800">
      <%= @student_goal.goal.name %> Goal for <%= @student_goal.student.full_name %>
    </h1>
    <h3 class="text-lg text-slate-600"><%= @student_goal.goal.category %></h3>
    <p class="mt-4 text-slate-700">
      SWBAT: <%= @student_goal.goal.objectives.sub(/[[:punct:]]+\z/, "") %>
      at <strong><%= @student_goal.mastery_percent %>%</strong> accuracy by
      <strong><%= @student_goal.target_date.strftime("%m/%d/%Y") %></strong>.
    </p>
    <dl class="mt-4 grid grid-cols-2 gap-4 text-sm text-slate-600">
      <div>
        <dt class="font-medium">Start Date:</dt>
        <dd><%= @student_goal.start_on.strftime("%m/%d/%Y") %></dd>
      </div>
      <div>
        <dt class="font-medium">Target Date:</dt>
        <dd><%= @student_goal.target_date.strftime("%m/%d/%Y") %></dd>
      </div>
      <div>
        <dt class="font-medium">Baseline:</dt>
        <dd><%= @student_goal.baseline %></dd>
      </div>
      <div>
        <dt class="font-medium">Status:</dt>
        <dd><%= @student_goal.status.sub("_", " ").titleize %></dd>
      </div>
    </dl>
  </header>

  <% if policy(ProgressEntry).new?%>
    <section class="bg-white p-6 rounded-lg shadow space-y-4">
      <h3 class="text-xl font-semibold text-slate-800">Add Progress Entry</h3>

      <%= form_with model: [@student, @student_goal, @progress_entry], data: { turbo: false },
                  class: "space-y-4" do |f| %>
        <%= render "shared/errors", resource: @progress_entry %>

        <div>
          <%= f.label :note, "Note *", class: "block text-sm font-medium text-slate-700" %>
          <%= f.text_area :note, rows: 4,
            class: "mt-1 block w-full rounded-md border-slate-300 shadow-sm focus:ring-slate-500 focus:border-slate-500" %>
        </div>

        <div>
          <%= f.label :recorded_on, "Recorded On *", class: "block text-sm font-medium text-slate-700" %>
          <%= f.date_field :recorded_on,
            class: "mt-1 block w-full rounded-md border-slate-300 shadow-sm focus:ring-slate-500 focus:border-slate-500" %>
        </div>

        <div>
          <%= f.label :evidence_url, "Evidence", class: "block text-sm font-medium text-slate-700" %>
          <%= f.text_field :evidence_url,
            class: "mt-1 block w-full rounded-md border-slate-300 shadow-sm focus:ring-slate-500 focus:border-slate-500" %>
        </div>

        <div>
          <%= f.label :score_numeric, "Score", class: "block text-sm font-medium text-slate-700" %>
          <%= f.number_field :score_numeric,
            class: "mt-1 block w-full rounded-md border-slate-300 shadow-sm focus:ring-slate-500 focus:border-slate-500" %>
        </div>

        <%= f.submit "Add Entry",
            class: "inline-flex items-center px-4 py-2 bg-slate-800 text-white rounded-md hover:bg-slate-700 focus:outline-none focus:ring-2 focus:ring-slate-500" %>
      <% end %>
    </section>
  <% end %>

  <section class="space-y-4">
    <h3 class="text-xl font-semibold text-slate-800">Progress History</h3>
    <ul class="divide-y divide-slate-200">
      <% @progress_entries.each do |entry| %>
        <li class="py-4">
          <div class="flex justify-between items-start">
            <div>
              <h5 class="font-medium text-slate-800">
                Entry <%= entry.recorded_on.strftime("%m/%d/%Y") %>
              </h5>
              <p class="mt-1 text-slate-700"><%= entry.note %></p>
              <% if entry.evidence_url.present? %>
                <p class="text-sm text-slate-600 mt-1">Evidence: <%= entry.evidence_url %></p>
              <% end %>
              <% if entry.score_numeric.present? %>
                <p class="text-sm text-slate-600 mt-1">Score: <%= entry.score_numeric %></p>
              <% end %>
            </div>
            <% if policy(entry).destroy? %>
              <%= button_to "Delete",
                  student_student_goal_progress_entry_path(@student, @student_goal, entry),
                  method: :delete,
                  data: { confirm: "Are you sure?" },
                  class: "ml-4 inline-flex items-center px-3 py-1 text-sm text-white bg-red-600 rounded-md hover:bg-red-500" %>
            <% end %>
          </div>
        </li>
      <% end %>
    </ul>
  </section>

  <div class="pt-6">
    <%= link_to "Back to #{@student_goal.student.first_name}",
          @student_goal.student,
          class: "text-slate-600 hover:text-slate-800 underline" %>
  </div>

</div>
