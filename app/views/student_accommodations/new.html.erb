<h1 class="text-2xl font-semibold mb-6">
  Add Accommodation for <%= @student.first_name %>
</h1>

<%= form_with model: [@student, @student_accommodation],
              local: true,
              class: "space-y-6 max-w-lg bg-white p-6 rounded-md shadow" do |f| %>

  <div>
    <%= f.label :accommodation_id,
                "Select Accommodation",
                class: "block text-sm font-medium text-slate-700 mb-1" %>
    <%= f.collection_select :accommodation_id,
                            Accommodation.all,
                            :id,
                            :name,
                            {},
                            class: "w-full rounded-md border-slate-300 focus:border-blue-500 focus:ring-blue-500" %>
  </div>

  <div>
    <%= f.label :start_on,
                class: "block text-sm font-medium text-slate-700 mb-1" %>
    <%= f.date_field :start_on,
                     class: "w-full rounded-md border-slate-300 focus:border-blue-500 focus:ring-blue-500" %>
  </div>

  <div>
    <%= f.label :end_on,
                class: "block text-sm font-medium text-slate-700 mb-1" %>
    <%= f.date_field :end_on,
                     class: "w-full rounded-md border-slate-300 focus:border-blue-500 focus:ring-blue-500" %>
  </div>

  <div>
    <%= f.label :notes,
                class: "block text-sm font-medium text-slate-700 mb-1" %>
    <%= f.text_area :notes,
      rows: 4,
      class: "w-full rounded-md border border-slate-900 focus:border-blue-500 focus:ring-blue-500" %>
  </div>

  <div>
    <%= f.submit "Assign Accommodation",
                 class: "inline-flex items-center rounded-md bg-blue-600 px-4 py-2 text-white text-sm font-semibold hover:bg-blue-700" %>
  </div>
<% end %>

<%= render "shared/errors", resource: @student_accommodation %>
<% if policy(@student).show? %>
  <%= link_to "Back to #{@student.first_name}",
          @student,
          class: "inline-flex items-center rounded-lg bg-slate-100 px-3 py-1.5 text-slate-800 text-sm hover:bg-slate-200" %>
<% end %>
